<div class="row">
  <div class="col-xs-6 col-xs-offset-3 text-center">
    <h1>Ritual Director</h1>
    <br>
    <!-- Things we care about seeing -->
    <!-- 
          current number of players.
          who's the leader
          is there a current ritual going on?
          ritual timer?
          list of rituals

          actions:
          player joining
          player leaving
      -->
  </div>
</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Current Game (ID#<%= @game.id %>)</h3>
      </div>
      <div class="panel-body">
        <p><strong>Current Leader:</strong> <%= @leadername %> | <strong>Current Player Count:</strong> <%= @players.length %></p>
        <ul class="list-group">
          <% @players.each do |player| %>
            <li class="list-group-item <%= if player == @leader then 'list-group-item-success' end %>"><%= player.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Player Join</h3>
      </div>
      <div class="panel-body">
        <form class="form-inline" method="post" action="/join">
          <div class="form-group">
            <label for="join-UUID">UUID</label>
            <input type="text" class="form-control" id="join_UUID" name="uuid" value="<%= getRandomUUID() %>">
          </div>
          <div class="form-group">
            <label for="join-name">NAME</label>
            <input type="text" class="form-control" id="join-name" name="name" value="<%= getRandomName() %>">
          </div>
          <button type="submit" class="btn btn-default">Join</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Reset Game</h3>
      </div>
      <div class="panel-body">
        <form class="form-inline" method="get" action="/reset">
          <button type="submit" class="btn btn-danger btn-lg btn-block">RESET GAME</button>
        </form>
      </div>
    </div>
  </div>
</div>
